<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GymManagementMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        i{
            font-size:25px;
            padding:5px;
        }
        a:hover{
            background-color:coral;
            border-radius:5px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #FAEBD7;">

            <div class="container-fluid" style="background-color: #FAEBD7;">
                <h1 class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><b>StayFitGym</b></h1>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home"><b>Home</b></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Equipments"><b>Equipments</b></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Members"><b>Members</b></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Trainers"><b>Trainers</b></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <img src="~/Images/bg.jpg" width="100%" />

    <div class="container" style="position:absolute;top:100px;left:180px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        <div class="container text-light">
            &copy; 2021 - GymManagementMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/1632257166.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
